<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="controlTextView">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="commentTextView">
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="smallFrame">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bgr_rect</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_marginBottom">4dp</item>

    </style>

    <style name="bigFrame" parent="smallFrame">
        <item name="android:layout_height">192dp</item>
    </style>

    <style name="testImageView">
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/test_image1</item>

    </style>

    <style name="squareImageView" parent="testImageView">
        <item name="android:background">@android:color/holo_green_light</item>
    </style>

</resources>
